<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <!-- Task Details Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_task_details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.3"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/textTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Task Title"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textSubject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Subject: Mathematics"
                android:layout_marginTop="6dp"
                android:textColor="@color/dark_gray" />

            <TextView
                android:id="@+id/textDueDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Due Date: 20 June 2025"
                android:layout_marginTop="4dp"
                android:textColor="@color/dark_gray" />

            <TextView
                android:id="@+id/textCompletionDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Completed On: 18 June 2025"
                android:layout_marginTop="4dp"
                android:textColor="@color/dark_gray" />

            <TextView
                android:id="@+id/textPriority"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Priority: High"
                android:layout_marginTop="4dp"
                android:textColor="@color/dark_gray" />

            <TextView
                android:id="@+id/textDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description: Complete all questions from chapter 5 and prepare for the quiz. This is an extended explanation to check scroll behavior when content is long. Keep adding lines to test vertical scrolling if needed."
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:lineSpacingExtra="4dp"
                android:textSize="14sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
